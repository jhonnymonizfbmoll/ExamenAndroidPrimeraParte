<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/primerFragment"
        android:name="com.jhonnymoniz.examen.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="404dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_first" />

    <fragment
        android:name="com.jhonnymoniz.examen.SecondFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/segundoFragment"
        tools:layout="@layout/fragment_second"/>

    <fragment
        android:name="com.jhonnymoniz.examen.ThirdFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/tercerFragment"
        tools:layout="@layout/fragment_third"/>



</LinearLayout>